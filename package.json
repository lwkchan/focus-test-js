{
  "name": "focus-test-js",
  "displayName": "focus-test-js",
  "description": "Quickly focus and unfocus tests in popular js testing frameworks",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focus-test-js.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "focus-test-js.focusCurrentTest",
        "title": "Toggle Focus on Current Test"
      }
    ],
    "configuration": {
      "title": "Focus Test JS",
      "properties": {
        "focus-test-js.testFocusMethod": {
          "type": "string",
          "default": ".only",
          "enum": [
            ".only",
            "f"
          ],
          "enumDescriptions": [
            "Append .only to test function names (e.g., test.only)",
            "Prepend f to test function names (e.g., ftest)"
          ],
          "description": "Method to use for focusing tests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
